//program to find sum of natural numbers using recursion
#include<stdio.h>
int addnum(int n);
int main()
{


int n;
printf("Enter a positive number");
scanf("%d",&n);
printf("Sum=%d",addnum(n));
return 0;
}
int addnum(int n)
{
	if (n!=0)
	return n+addnum(n-1);
	else
	return n;
}
//Reverse a sentence using recursion
#include<stdio.h>
void revSen();
int main()
{
	printf("Enter a sentence");
	revSen();
	
	return 0;
}
void revSen()
{
	char c;
	scanf("%c",&c);
	if(c!='\n')
	{
		revSen();
		printf("%c",c);
		
		
	}
	
	
}





	
	
	
	
	
	
	
	


	
	
	
